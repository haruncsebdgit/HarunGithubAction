# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 150
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,vue}]
indent_size = 4

[*.{htm,html}]
indent_size = 4

[*.{css,sass,scss,less,styl}]
indent_size = 4

[*.php]
max_line_length = 120

[*.json]
indent_size = 4
max_line_length = 120

[*.{yaml,yml}]
indent_style = tab
trim_trailing_whitespace = false

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.sh]
indent_style = tab

[Dockerfile]
indent_style = tab

[COMMIT_EDITMSG]
max_line_length = 0
